<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    android:id="@+id/itemJobCard"
    android:backgroundTint="@color/white_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                android:id="@+id/itemJobPosition"
                android:text="@string/app_name"
                android:textColor="@color/color__primary__dark"
                android:paddingStart="@dimen/_4sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ShapeAppearance.MaterialComponents.LargeComponent"
                android:id="@+id/itemJobTitle"
                android:text="@string/app_name"
                android:textColor="@color/default_text_color"
                android:padding="@dimen/_4sdp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                android:id="@+id/itemJobLastDate"
                android:text="@string/app_name"
                android:textColor="@color/color__bkash"
                android:paddingStart="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/itemJobViewBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW"
                app:cornerRadius="20dp"/>

        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>